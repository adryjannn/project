<Window x:Class="game_reviews.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game_reviews"
        mc:Ignorable="d"
        Title="Login screen" Height="450" Width="800" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20" >
        <StackPanel Margin="20">
            <Label Content="Logowanie" Foreground="White" FontSize="30" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Login" Foreground="White" FontSize="24"></Label>
            <TextBox Name="userName" Background="#545d6a" Foreground="White" FontSize="24"></TextBox>
            <Label Content="Hasło" Foreground="White" FontSize="24"></Label>
            <PasswordBox Name="password" Background="#545d6a" Foreground="White" FontSize="24"></PasswordBox>
            <Button Name="btnSubmit" Content="Login" Click="btnSubmitLogin_Click" Background="#545d6a" Foreground="White" FontSize="25" Margin="190 40"></Button>
        </StackPanel>
    </Border>
    
</Window>
